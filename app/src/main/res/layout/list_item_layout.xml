<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >



    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:id="@+id/middleScreenView"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/middleScreenView"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblListItem"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/alignment_canvasBackground"
            android:layout_marginLeft="35dp"
            android:textSize="12dip"
            android:textStyle="bold"
            android:text="ZZZ"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/checkItemImageView"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:layout_alignBottom="@+id/lblListItem"
            android:layout_toEndOf="@+id/lblListItem"/>

    </RelativeLayout>
</RelativeLayout>