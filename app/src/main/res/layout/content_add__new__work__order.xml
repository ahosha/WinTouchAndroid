<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.alignmentActivities.AddNewWorkOrder"
    tools:showIn="@layout/app_bar_add__new__work__order">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/backgound_image_new_project"
            android:id="@+id/mainBackgroundaddNewWorkorder"
            ></ImageView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_my_location_black_24dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/newWorkorder_workorderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/mainBackgroundaddNewWorkorder"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:hint="Customer name"
            app:met_helperText="Required"
            android:inputType="textPersonName"
            app:met_floatingLabel="normal" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/newWorkorder_workorderAdress"
            android:layout_width= "match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/newWorkorder_workorderName"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:hint="Address"
            android:inputType="textPersonName"
            app:met_floatingLabel="normal"
            />

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/black"
            android:layout_toRightOf="@+id/newWorkorder_workorderAdress"
            android:layout_alignBottom="@+id/newWorkorder_workorderAdress"
            android:layout_marginLeft="-60dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/newWorkorder_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/newWorkorder_workorderAdress"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:hint="Phone number"
            android:inputType="phone"
            app:met_floatingLabel="normal"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView9"
            android:src="@drawable/ic_person_hard_black_24dp"
            android:layout_alignBottom="@+id/newWorkorder_workorderName"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView10"
            android:src="@drawable/ic_place_black_24dp1"
            android:layout_alignBottom="@+id/newWorkorder_workorderAdress"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView110"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_alignBottom="@+id/newWorkorder_phoneNumber"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/newWorkorder_beginAlignment_button"
            android:background="@color/alignment_canvasShading_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Start alignment"
            android:textColor="@color/white"
            android:layout_below="@+id/newWorkorder_phoneNumber"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</ScrollView>
