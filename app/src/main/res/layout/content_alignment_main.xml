<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/alignment_canvasBackground"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="apps.radwin.wintouch.activities.alignmentActivities.AlignmentMainActivity"
    tools:showIn="@layout/app_bar_alignment_main">

    <apps.radwin.wintouch.canvasRelated.alignmentWidget
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:id="@+id/mainAlignmentWidget" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:gravity="center"
        android:textColor="@color/alignementWhite"
        android:textSize="30dp"
        android:id="@+id/textView27"
        android:paddingTop="300dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/alignment_secondary_headline"
        android:gravity="center"
        android:textColor="@color/alignment_canvasOutline"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/alignmentMainTextDescription"
        android:layout_below="@+id/alignmentMainTextHeadline"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/alignment_main_headline"
        android:gravity="center"
        android:textColor="@color/alignementWhite"
        android:textSize="25dp"
        android:id="@+id/alignmentMainTextHeadline"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <!--<apps.radwin.wintouch.canvasRelated.FineAlignmentView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/fineAlignmentView"-->
        <!--/>-->

</RelativeLayout>
